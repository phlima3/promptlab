{
  "name": "promptlab",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "db:migrate": "dotenv -e .env -- npx prisma migrate dev --schema=./packages/db/prisma/schema.prisma",
    "db:generate": "cd packages/db && npx prisma generate",
    "db:seed": "dotenv -e .env -- tsx packages/db/src/seed.ts",
    "test:flow": "dotenv -e .env -- tsx scripts/test-flow.ts"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@types/express": "^5.0.6",
    "express": "^5.2.1"
  }
}
